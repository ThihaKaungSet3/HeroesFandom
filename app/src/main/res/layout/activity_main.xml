        app:backgroundColor="@color/darkestGrey"
        app:itemFontFamily="@font/sans_regular_family"
        app:iconTint="@color/not_selected_gray_color"
        app:sideMargins="8dp"
        app:textSize="12sp"
        app:iconSize="24dp"
        app:iconTintActive="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
